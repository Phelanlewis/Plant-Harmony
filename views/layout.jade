doctype 5
html(lang="en")
	head
		block title
			title The Companion Planting Guide
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="A guide to companion planting")
		meta(name="keywords", content="planting,herbs,vegetables,gardening")
		link(rel="stylesheet", href="/css/bootstrap.min.css")
		style body { padding-top:60px; }
		link(rel="stylesheet", href="/css/bootstrap-responsive.min.css")
		link(rel="stylesheet", href="/css/main.css")
	body
		
		div.navbar.navbar-fixed-top
			div.navbar-inner
				div.container
					a.brand Plant Harmony

		block content
				

	script(type="text/javascript", src="/js/jquery-1.7.1.min.js")
	script(type="text/javascript", src="/js/bootstrap.js")
	script(type="text/javascript", src="/js/bootstrap-typeahead.js")
	script(type="text/javascript", src="/js/underscore-min.js")
	script(type="text/javascript")
		$(function() {
			$.get('/api/plants', function(result) { 

				var plants = []

				_.each(result.data, function(plant){ 
					plants.push(plant.name);
				});

				$('input.search-query').typeahead({
					items: 5,
					source: plants
				}).change(function() {
					window.location = "/plants/" + this.value;
				});

			});
		});