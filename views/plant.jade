doctype 5
html(lang="en")
	head
		title The #{plant.name} Companion Planting Guide
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="A guide to companion planting")
		meta(name="keywords", content="planting,herbs,vegetables,gardening")
		link(rel="stylesheet", href="/css/bootstrap.min.css")
		style body { padding-top:60px; }
		link(rel="stylesheet", href="/css/bootstrap-responsive.min.css")
		link(rel="stylesheet", href="/css/main.css")
	body
		
		div.navbar.navbar-fixed-top
			div.navbar-inner
				div.container
					a.brand Plant Harmony

		div.container	
			div.search
				form.search
					input.search-query(type="search", placeholder="Search")

				div.details
					img.thumbnail(src="/images/plants/#{plant.image}")
					
					h2 #{plant.name}
					p.subtitle #{plant.type}
					
					p #{plant.description}
					
					h3 Companions
					if plant.companions && plant.companions.length > 0
						ul.unstyled
							each companion in plant.companions
								li 
									a(href="/plants/#{companion}") #{companion}
					else
						p.subtitle None

					h3 Foes
					if plant.foes && plant.foes.length > 0
						ul.unstyled
							each foe in plant.foes
								li 
									a(href="/plants/#{foe}") #{foe}
					else
						p.subtitle none


